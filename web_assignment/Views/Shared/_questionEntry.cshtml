<div class="card mb-4 p-3 bg-light">
    <div class="row mt-2">
        <div class="col-md-6 text-start">
            <h3>@ViewBag.question.title</h3>
        </div>
        <div class="col-md-6 text-end">
            <a type="button" class="btn btn-primary" asp-controller="Question" asp-action="Viewer" asp-route-id="@ViewBag.question.QuestionModelId">Go to question</a>
        </div>
    </div>
    <div class="row mt-3 px-1">
        <div class="col-md-12 text-start">
            <p>@ViewBag.question.content</p>
        </div>
    </div>
</div>