@{
    ViewData["Title"] = "Home Page";
}


<div class="container justify-content-center align-items-center" style="margin-top: 20vh;">
    <div class="row text-center mb-3">
        <h1 class="display-1">Welcome</h1>
    </div>
    <div class="row d-flex justify-content-center">

        @* Users navigate to the relevant view by clicking on the button according to the action they wish to perform *@

        <div class="col-md-3 col-sm-3 col-4 d-flex justify-content-end align-items-center">
            <a class="btn btn-primary" asp-controller="Question" asp-action="Editor">Add Question</a>
        </div>
        <div class="col-lg-3 col-md-5 col-sm-6 col-4 d-flex justify-content-center align-items-center">
            <a class="btn btn-primary" asp-controller="Question" asp-action="Viewer">Get Random Question</a>
        </div>
        <div class="col-md-3 col-sm-3 col-4 d-flex justify-content-start align-items-center">
            <a class="btn btn-primary" asp-controller="Question" asp-action="Index">All Questions</a>
        </div>
    </div>
</div>
